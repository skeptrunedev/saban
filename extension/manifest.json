{
  "manifest_version": 3,
  "name": "Saban - LinkedIn Profile Scraper",
  "version": "1.0.0",
  "description": "Captures LinkedIn profiles data for lead generation",
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://media.licdn.com/*",
    "https://media-exp1.licdn.com/*",
    "https://media-exp2.licdn.com/*",
    "https://static.licdn.com/*",
    "http://localhost:3847/*",
    "https://saban-api.skeptrune.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": ["http://localhost:5173/*", "https://saban.skeptrune.com/*"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content-isolated.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    },
    {
      "matches": ["http://localhost:5173/*", "https://saban.skeptrune.com/*"],
      "js": ["content-auth.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Saban",
    "default_icon": {
      "16": "icons/icon16.png",
      "19": "icons/icon19.png",
      "38": "icons/icon38.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
